{
  "_version": "1.50.0",
  "sap.app": {
    "id": "com.employeecalendar",
    "type": "application",
    "i18n": "i18n/i18n.properties",
    "applicationVersion": {
      "version": "1.0.0"
    },
    "title": "{{appTitle}}",
    "description": "{{appDescription}}",
    "dataSources": {
      "employeeAPI": {
        "uri": "/backend/api/",
        "type": "JSON",
        "settings": {
          "localUri": "localservice/mockdata"
        }
      }
    }
  },
  "sap.ui": {
    "technology": "UI5",
    "deviceTypes": {
      "desktop": true,
      "tablet": true,
      "phone": true
    }
  },
  "sap.ui5": {
    "flexEnabled": true,
    "i18n": {
      "bundleUrl": "i18n/i18n.properties",
      "supportedLocales": [
        "",
        "en",
        "de"   
      ],
      "fallbackLocale": "en"
    },
    "dependencies": {
      "minUI5Version": "1.120.0",
      "libs": {
        "sap.ui.core": {},
        "sap.m": {},
        "sap.ui.layout": {},
        "sap.ui.unified": {}
      }
    },
    "contentDensities": {
      "compact": true,
      "cozy": true
    },
    "models": {
      "i18n": {
        "type": "sap.ui.model.resource.ResourceModel",
        "settings": {
          "bundleName": "com.employeecalendar.i18n.i18n"
        }
      },
      "employee": {
        "type": "sap.ui.model.json.JSONModel",
        "dataSource": "employeeAPI"
      },
      "session": {
        "type": "sap.ui.model.json.JSONModel"
      }
    },
    "resources": {
      "css": [
        {
          "uri": "css/style.css"
        }
      ]
    },
    "routing": {
      "config": {
        "routerClass": "sap.m.routing.Router",
        "viewType": "XML",
        "viewPath": "com.employeecalendar.view",
        "controlAggregation": "pages",
        "controlId": "app",
        "transition": "slide",
        "async": true,
        "clearControlAggregation": false
      },
      "routes": [
        {
          "pattern": "",
          "name": "login",
          "target": "login"
        },
        {
          "pattern": "main",
          "name": "main",
          "target": "main"
        },
        {
          "pattern": "logout",
          "name": "logout",
          "target": "login"
        }
      ],
      "targets": {
        "login": {
          "viewName": "Login",
          "viewLevel": 0
        },
        "main": {
          "viewName": "Main",
          "viewLevel": 1
        }
      }
    }
  }
}